<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/signup.css">

<div class="container">
        <form action="/details" method="POST" enctype="multipart/form-data">
          <div class="row">
            <div class="col-25">
              <label for="gender">Gender</label>
            </div>
            <div class="col-75">
              <select id="gender" name="gender">
                <option value="...">...</option>
                <option value="male">Male</option>
                <option value="female">Female</option>
                <option value="other">Other</option>
              </select>
            </div>
          </div>
       
      
          <div class="row">
            <div class="col-25">
              <label for="sexuality">Looking for : </label>
            </div>
            <div class="col-75">
              <select id="sexuality" name="sexuality">
                 <option value="...">...</option>
                <option value="male">Male</option>
                <option value="female">Female</option>
                <option value="both">Both</option>
                <option value="other">Other</option>
              </select>
            </div>
          </div>
          
          <div class="row">
            <div class="col-25">
              <label for="interests"> Interests :</label>
            </div>
            <div class="col-75">
              <input type="text" id="interests" name="interests" placeholder="#football, #makeup, #skydiving, #videogames">
            </div>
          </div>
          
          <div class="row">
            <div class="col-25">
              <label for="bio">Bio :</label>
            </div>
            <div class="col-75">
              <textarea id="bio" name="bio" maxlength='300' placeholder="Write a short bio.." style="height:200px"></textarea>
            </div>
          </div>


          <div class="row">
            <div class="col-25">
              <label for="pictures">Pictures : </label>
            </div>
            <div class="col-25">
                <input type="file" name="pic" accept="image/*">
                <input type="file" name="pic1" accept="image/*">
                <input type="file" name="pic2" accept="image/*">
                <input type="file" name="pic3" accept="image/*">
                <input type="file" name="pic4" accept="image/*">
            </div>
          </div>


          <div class="row">
            <input type="submit" value="Submit">
          </div>
        </form>
      </div>
      <%- include('../includes/end.ejs') %>